<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:String x:Key="ThemeName">ZA</sys:String>

    <SolidColorBrush x:Key="JoyBlue" Color="#2C2321"/>
    <SolidColorBrush x:Key="JoyRed"  Color="#3AB371"/>
    <SolidColorBrush x:Key="BrushPanel"  Color="#F7F8FA"/>
    <SolidColorBrush x:Key="BrushCard"   Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BrushStroke" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="BrushText"   Color="#1A1E27"/>
    <SolidColorBrush x:Key="BrushSubtle" Color="#6B7280"/>
    <SolidColorBrush x:Key="ScreenBackground" Color="#6B7280"/>

    <DropShadowEffect x:Key="SoftShadow"
                      BlurRadius="16"
                      ShadowDepth="0"
                      Color="#000000"
                      Opacity="0.20"/>

    <DrawingBrush x:Key="LeftTint" Stretch="Fill">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <!-- 背景图片 -->
                <GeometryDrawing>
                    <GeometryDrawing.Brush>
                        <ImageBrush ImageSource="Assets/LeftTint_ZA.png"
            Stretch="Fill" AlignmentX="Center" AlignmentY="Center" Opacity="0.8"/>
                    </GeometryDrawing.Brush>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <GeometryDrawing>
                    <GeometryDrawing.Brush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#00FFFFFF" Offset="0"/>
                            <GradientStop Color="#FFFFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </GeometryDrawing.Brush>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>



    <DrawingBrush x:Key="RightTint" Stretch="Fill">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <!-- 背景图片 -->
                <GeometryDrawing>
                    <GeometryDrawing.Brush>
                        <ImageBrush ImageSource="Assets/RightTint_ZA.png"
            Stretch="Fill" AlignmentX="Center" AlignmentY="Center" Opacity="0.8"/>

                    </GeometryDrawing.Brush>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <GeometryDrawing>
                    <GeometryDrawing.Brush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#00FFFFFF" Offset="0"/>
                            <GradientStop Color="#FFFFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </GeometryDrawing.Brush>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,1,1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
</ResourceDictionary>